/*
Model an event counter that is used in a weather station to count the number of times
 that a temperature rises above some threshold.

Use the variable names temp and count.
*/

module EventCounter {
  var temp: integer;
  var threshold: integer;
  var int: integer;
  var count: integer;

  init {
    temp = 0;
    threshold = 0;
    int = 0;
    count = 0;

  }
  next {
    if (temp > threshold) {
      count' = (count + 1);
    }

  }
}
