module Thermostat {
  input temp: real;

  output heatOn: boolean;
  output heatOff: boolean;

  next {
    if (heatOn) {
      if (temp >= 22.0) {
        heatOn' = false; //37
      }
    } else {
      if (heatOff) {
        if (temp <= 18.0) {
          heatOff' = false; //53
        }
      } else {
        if (temp < 20.0) {
          heatOn' = true; //66
        } else {
          if (temp > 20.0) {
            heatOff' = true; //77
          }
        }
      }
    }

  }
}
