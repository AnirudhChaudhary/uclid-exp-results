module SequentialCircuit {
  var next_r: boolean;
  var r: boolean;

  input x: boolean;

  output y: boolean;

  init {
    r = false; //32

  }
  next {
    next_r' = (x || r); //42
    y' = !(x ^ r); //52
    r' = (r ==> next_r); //61

  }
  invariant r_inv : (r ==> true);
  invariant x_inv : (!x ==> x);
  invariant y_inv : !(x ^ r);

  control  {
    v = bmc(3);
    check;
    print_results;
    v.print_cex();
  }
}
