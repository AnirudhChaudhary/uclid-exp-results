module TrafficLights {
  var state1: [integer]Light;
  var state2: [integer]Light;

  next {
    state1' = (if (state2 == Light[0]) then state1 else state1); //43
    state2' = (if (state1 == Light[0]) then state2 else state2); //59

  }
  invariant spec: (((state1[0] == green) && (state2[0] == red)) || ((state1[0] == red) && (state2[0] == green)));
  control  {
    v = bmc(3);
    check;
    print_results;
    v.print_cex();
  }
}
