module ConcurrentProgram {
  var Dec: bv3;
  var Inc: bv2;
  var Reset: bv4;
  var x: integer;

  init {
    x = 0; //33

  }
  next {
    Inc' = (if (x < 200) then (Inc + 1bv2) else Inc); //53
    Dec' = (if (x > 0) then (Dec - 1bv3) else Dec); //71
    Reset' = (if (x == 200) then 0bv4 else Reset); //86

  }
  invariant spec: ((x >= 0) && (x <= 200));
  control  {
    v = bmc(3);
    check;
    print_results;
    v.print_cex();
  }
}
