module TrafficLight {
  var red: boolean;
  var green: boolean;

  init {
    red = true; //22
    green = false; //26

  }
  procedure step()
    modifies green;
    modifies red;
  {
    if (red) {
      red = green; //36
      green = false; //40
    }
    if (green) {
      green = red; //50
      red = false; //54
    }
  }

  next {
    call step();
  }
  invariant spec: true;
  control  {
    v = bmc(3);
    check;
    print_results;
    v.print_cex();
  }
}
