module EventCounter {
  var threshold: real;
  var temp: real;
  var count: real;

  init {
    temp = 0.0; //26
    count = 0.0; //30

  }
  next {
    if (temp >= threshold) {
      count' = (count + 1.0); //46
    }

  }
  invariant temp_inv : (temp >= 0.0);
  invariant count_inv : (count >= 0.0);

  control  {
    v = bmc(3);
    check;
    print_results;
    v.print_cex();
  }
}
